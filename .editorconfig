# EditorConfig is awesome:

root = true

# 此文件里面既有 tab 又有4空格 还有2空格，统一改为2空格

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
